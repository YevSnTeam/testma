
<h1>Alle Kategorien</h1>

<table>
	<% @categories.each do |category| %>
		<tr>
			<td><%= category.name %></td>
			<td><%= link_to 'Anzeigen', category %></td>
			<td><%= link_to 'Bearbeiten', edit_category_path(category) %></td>
			<td><%= link_to 'Löschen', category, confirm: 'Wollen Sie diesen Datensatz wirklich löschen?', method: :delete%></td>
		</tr>
	<% end %>
</table>

<p><%= link_to 'Neue Kategorie', new_category_path %></p>